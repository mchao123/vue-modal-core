{
    "name": "vue-modal-core",
    "version": "1.0.6",
    "license": "MIT",
    "description": "一个轻量级的 Vue 3 模态框管理库，提供灵活的模态框控制和生命周期管理",
    "repository": {
        "type": "git",
        "url": "https://github.com/mchao123/vue-modal-core.git"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "prepublishOnly": "npm run build"
    },
    "author": "ZhangSan",
    "peerDependencies": {
        "vue": "^3.4.0"
    },
    "devDependencies": {
        "typescript": "^5.2.2",
        "tsup": "^8.0.2",
        "vue": "^3.4.0"
    },
    "keywords": [
        "vue",
        "modal",
        "vue3",
        "dialog",
        "popup",
        "overlay",
        "typescript"
    ]
}
